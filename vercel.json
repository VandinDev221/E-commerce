{
  "buildCommand": "npm run build",
  "outputDirectory": "frontend/dist",
  "installCommand": "npm run install:all",
  "rewrites": [
    { "source": "/((?!api/).*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/[[...slug]].ts": {
      "memory": 1024,
      "maxDuration": 10
    },
    "api/admin/[...slug].ts": {
      "memory": 1024,
      "maxDuration": 10
    },
    "api/admin/orders/[id]/status.ts": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
}
